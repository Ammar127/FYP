<section class="dashboard-body">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12 nopadding">
                <div class="col-md-4 col-sm-4 col-xs-12">
                    <div class="panel">
                        <div class="dashboard-logo-sidebar"> <img class="img-responsive center-block" src="/asset/images/company/logo1.jpg" alt="Image"> </div>
                        <div class="text-center dashboard-logo-sidebar-title">
                            <h4>Your Company Agency Pvt. Ltd</h4>
                        </div>
                    </div>
                    {{> comnav}}
                </div>
                <div class="col-md-8 col-sm-8 col-xs-12">
                    <div>
                        <ul class="wizard-steps light-grey panel" role="tablist">
                            <li class="active current b1" role="tab" aria-expanded="true">
                                <h4><span>1</span>Basic Details</h4>
                            </li>
                            <li role="tab" class="disabled b2" aria-expanded="false">
                                <h4><span>2</span>Description</h4>
                            </li>
                            <li role="tab" class="disabled b3" aria-expanded="false">
                                <h4><span>3</span>Finish</h4>
                            </li>
                        </ul>
                        <form action="/com/postjob" method="post">
                        <div class="wizard-content">
                            <div id="a1">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Job Title</label>
                                            <input  class="form-control" placeholder="E.g. Senior PHP Developer" type="text" name="j_title" id="j_title" required>
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <div class="form-group">
                                            <label>Job Type</label>
                                            <select name="jobtype" id="jobtype" class="form-control">

                                                <option value="Full Time">Full Time</option>
                                                <option value="Part Time">Part Time</option>
                                                <option value="Freelance">Freelance</option>
                                                <option value="Internship">Internship</option>
                                                <option value="Temporary">Temporary</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Experience Required</label>
                                            <input  class="form-control" placeholder="E.g. 1 - 3 Years OR Fresh Graduate" name="j_exp" id="j_exp" type="text" required>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Salary Range</label>
                                            <input class="form-control" placeholder="E.g. 35k to 45k"  id="j_sal" name="j_sal"  type="text" required>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Last Date to Apply</label>
                                            <div class="input-append date form_date" data-date="" data-date-format="dd-mm-yyyy" data-link-field="dtp_input2" data-link-format="yyyy-mm-dd">
                                                <input onBlur="setValue(this.value, 'date_ov')" class="form-control" type="text" value="" readonly>
                                                <span class="add-on"><i class="icon-remove"></i></span> <span class="add-on"><i class="icon-th"></i></span> </div>
                                            <input type="hidden" name="dtp_input2" id="dtp_input2" value="" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div id="a2" hidden="">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label>Technology:</label>
                                            <input  class="form-control" placeholder="E.g. Senior PHP Developer" type="text" name="tag" id="tag" required>

                                            <textarea style="height:80px;" id="demo2" name="demo2" hidden></textarea>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label>Job Description:</label>
                                            <textarea class="form-control" id="editor" name="editor"></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div id="a3" hidden="">
                                <div class="row">
                                    <div class="col-md-12 col-sm-12 col-xs-12">
                                        <h1 id="jobTitle_ov"></h1>
                                        <br>
                                        <br>
                                        <div class="single-job-page">
                                            <div class="job-short-detail">
                                                <div class="col-md-12 col-sm-12 col-xs-12 nopadding">
                                                    <dl>
                                                        <dt>Job Type:</dt>
                                                        <dd id="jobType_ov"></dd>
                                                        <dt>Job Experience:</dt>
                                                        <dd id="exp_ov"></dd>
                                                        <dt>Expected Salary:</dt>
                                                        <dd id="sal_ov"></dd>
                                                        <dt>Last Date to Apply:</dt>
                                                        <dd id="date_ov"></dd>
                                                    </dl>
                                                </div>
                                            </div>
                                            <div class="heading-inner">
                                                <p class="title">Job Description</p>
                                            </div>
                                            <div class="job-desc job-detail-boxes">
                                                <p id="jobDetail_ov"></p>
                                            </div>
                                            <div class="heading-inner">
                                                <p class="title">Technologies</p>
                                            </div>
                                            <div class="job-desc job-detail-boxes">
                                                <p id="jobTech_ov"></p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="wizard-buttons"><a class="wizard-back disabled ab">Back</a><a class="wizard-next an pointer">Next</a></div>

                        <div class="wizard-buttons"><a class="wizard-back bb pointer" hidden="">Back</a><a class="wizard-next bn pointer"  hidden="">Next</a></div>

                        <div class="wizard-buttons"><a class="wizard-back cb pointer"  hidden="">Back</a><button type="submit" class="btn btn-default btn-block cf"  hidden=""><a class="wizard-finish cf pointer"  hidden="">Next</a></button></div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

