
<script src="/asset/ckeditor/ckeditor.js"></script>
<script src="/asset/ckeditor/samples/js/sample.js"></script>
<section class="dashboard-body">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12 nopadding">
                <div class="col-md-4 col-sm-4 col-xs-12">
                    <div class="panel">
                        <div class="dashboard-logo-sidebar"> <img class="img-responsive center-block" src="/asset/images/company/logo1.jpg" alt="Image"> </div>
                        <div class="text-center dashboard-logo-sidebar-title">
                            <h4>Your Company Agency Pvt. Ltd</h4>
                        </div>
                    </div>

                        {{> comnav}}

                </div>
                <div class="col-md-8 col-sm-8 col-xs-12">
                    <div class="heading-inner first-heading">
                        <p class="title">Edit Profile</p>
                    </div>
                    <div class="profile-edit row">
                        <form action="/com/editprof" method="post">
                            <div class="col-md-6 col-sm-12">
                                <div class="form-group">
                                    <label>Company Name: <span class="required">*</span></label>
                                    <input type="text" placeholder="Your Company Name" value="{{prof.companyName}}" name="companyName" class="form-control">
                                </div>
                            </div>
                            <div class="col-md-6 col-sm-12">
                                <div class="form-group">
                                    <label>Established In: <span class="required">*</span></label>
                                    <input type="date" value="02/15/2015" name="date" placeholder="Established In" class="form-control">
                                </div>
                            </div>
                            <div class="col-md-6 col-sm-12">
                                <div class="form-group">
                                    <label>Phone: <span class="required">*</span></label>
                                    <input type="tel" placeholder="92 306 411 8818" name="phone" value="{{prof.phone}}" class="form-control">
                                </div>
                            </div>
                            <div class="col-md-6 col-sm-12">
                                <div class="form-group">
                                    <label>Email: <span class="required">*</span></label>
                                    <input type="email" value="info@ariestech.net" name="email" placeholder="Company's Email Id" class="form-control">
                                </div>
                            </div>
                            <div class="col-md-6 col-sm-12">
                                <div class="form-group">
                                    <label>Website: <span class="required">*</span></label>
                                    <input type="text" value="{{prof.website}}" name="website" placeholder="www.ariestech.net" class="form-control">
                                </div>
                            </div>
                            <div class="col-md-6 col-sm-12">
                                <div class="form-group">
                                    <label>No. of Employees <span class="required">*</span></label>
                                    <input type="number" value="55" placeholder="e.g 55" class="form-control">
                                </div>
                            </div>
                            <div class="col-md-6 col-sm-12">
                                <div class="form-group">
                                    <label>Address: <span class="required">*</span></label>
                                    <input type="text" placeholder="Your office address" value="Office # 12, Zakiya Plaza, Muslim Town" name="address" class="form-control">
                                </div>
                            </div>
                            <div class="col-md-6 col-sm-12">
                                <div class="form-group">
                                    <label>City <span class="required">*</span></label>
                                    <input type="text" placeholder="City" value="{{prof.city}}" name="city" class="form-control">
                                </div>
                            </div>
                            <div class="col-md-6 col-sm-12">
                                <div class="form-group">
                                    <label>Country <span class="required">*</span></label>
                                    <input type="text" placeholder="Country" value="{{prof.country}}" name="country" class="form-control">
                                </div>
                            </div>
                            <div class="col-md-6 col-sm-12">
                                <div class="input-group image-preview form-group">
                                    <label>Profile Image: <span class="required">*</span></label>
                                    <input type="text" placeholder="Upload Profile Image" class="form-control image-preview-filename" disabled="disabled">
                                    <span class="input-group-btn">
                    <button type="button" class="btn btn-default image-preview-clear" style="display:none;"> <span class="glyphicon glyphicon-remove"></span> Clear </button>
                    <div class="btn btn-default image-preview-input"> <span class="glyphicon glyphicon-folder-open"></span> <span class="image-preview-input-title">Browse</span>
                      <input type="file" name="profilePic" accept="file_extension"/>
                    </div>
                    </span> </div>
                            </div>
                            <div class="col-md-12 col-sm-12">
                                <div class="form-group">
                                    <label>About Company <span class="required">*</span></label>
                                    <textarea name="desc" id="editor">{{prof.desc}}</textarea>
                                </div>
                            </div>
                            <div class="col-md-12 col-sm-12">
                                <button type="submit" class="btn btn-default pull-right"> Save Profile <i class="fa fa-angle-right"></i></button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script>
    initSample();
</script>