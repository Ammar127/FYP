    <script type="text/javascript">
        $(".full-page").height($(window).height());
        $(window).resize(function() {
            $(".full-page").height($(window).height());
        });

        function setCat(x){

            if(x == "1"){

                $("#std").show();
                $("#com").hide();
             //   $(".roll1").show();
             //   $(".email1").hide();
             //   $("#email").prop('disabled', true);
              //  $("#roll").prop('disabled', false);
            }
            if(x == "2"){

                $("#std").hide();
                $("#com").show();
               // $(".roll1").hide();
                //$(".email1").show();
               // $("#email").prop('disabled', false);
             //   $("#roll").prop('disabled', true);
            }
        }
        function checkPass(x, y){

            var p1 = $("#" + x).val();
            var p2 = $("#" + y).val();



            if(p1 != p2){

                $("#" + x).val("");
                $("#" + y).val("");

                alert("Both passwords does not match. Please try again.");
                return false;
            }
        }

    </script>
