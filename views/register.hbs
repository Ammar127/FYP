<body>
<div class="page category-page">
    <div id="spinner">
        <div class="spinner-img"> <img alt="Opportunities Preloader" src="/asset/images/loader.gif" />
            <h2>Please Wait.....</h2>
        </div>
    </div>
    <section class="login-page-4 parallex">
        <div class="container">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="login-container">

                            <div class="loginbox"> <img src="/asset/images/logo.png" alt="logo" class="img-responsive center-block"> <br>
                                <div class="loginbox-title">Sign Up for PUCIT Job Portal</div>
                                <br>
                                <div class="form-group">
                                    <label>Sign Up As: </label>
                                    <select onChange="setCat(this.value)" name="job-type" id="job-type" class="form-control">
                                        <option value="1">Student Account</option>
                                        <option value="2">Company Account</option>
                                    </select>
                                </div>
                                <div id="std">
                                <form action="#" method="post">
                                    <input type="hidden" value="1" name="type">
                                    <div class="form-group ">
                                        <label>Student Id: <span class="required">*</span></label>
                                        <input placeholder="" pattern="[bB][sciSCI][estEST][Ff][0-9]{2}[maMA][05][0-9]{2}"  title="For Example : BCSF14A526, bitf15m034" id="roll" name="roll" class="form-control" type="text" required>
                                    </div>

                                    <div class="form-group">
                                        <label>Password: <span class="required">*</span></label>
                                        <input placeholder="" class="form-control" id="pjp_pass1" name="pjp_pass1" type="password" required>
                                    </div>
                                    <div class="form-group">
                                        <label>Confirm Password: <span class="required">*</span></label>
                                        <input placeholder="" class="form-control" id="pjp_pass2" type="password" onBlur="checkPass('pjp_pass1', 'pjp_pass2')" required>
                                    </div>
                                    <div class="loginbox-forgot">
                                        <input type="checkbox" required>
                                        I accept <a href="/asset/#">Term and consitions?</a> </div>
                                    <div class="loginbox-submit">
                                        <input type="submit" class="btn btn-default btn-block" value="Register">
                                    </div>
                                    <div class="loginbox-signup"> Already have account <a href="/asset/login.html">Sign in</a> </div>
                                    </form>
                                </div>
                                <div id="com" hidden>
                                    <form action="#" method="post">
                                        <input type="hidden" value="2" name="type">
                                        <div class="form-group">
                                            <label>Email: <span class="required">*</span></label>
                                            <input id="email" name="email" placeholder="" class="form-control" type="email" required>
                                        </div>
                                        <div class="form-group">
                                            <label>Password: <span class="required">*</span></label>
                                            <input placeholder="" class="form-control" id="pjp_pass1" name="pjp_pass1" type="password" required>
                                        </div>
                                        <div class="form-group">
                                            <label>Confirm Password: <span class="required">*</span></label>
                                            <input placeholder="" class="form-control" id="pjp_pass2" type="password" onBlur="checkPass('pjp_pass1', 'pjp_pass2')" required>
                                        </div>
                                        <div class="loginbox-forgot">
                                            <input type="checkbox" required>
                                            I accept <a href="/asset/#">Term and consitions?</a> </div>
                                        <div class="loginbox-submit">
                                            <input type="submit" class="btn btn-default btn-block" value="Register">
                                        </div>
                                        <div class="loginbox-signup"> Already have account <a href="/asset/login.html">Sign in</a> </div>
                                    </form>
                                </div>
                            </div>

                    </div>
                </div>
            </div>
        </div>
    </section>
